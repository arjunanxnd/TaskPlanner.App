<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskPlanner.Resources.Styles.AppStyle">
    
    <Style TargetType="Label" x:Key="CommonLabelStyle">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
    <Style TargetType="Label" x:Key="FieldLabelStyle" BasedOn="{StaticResource CommonLabelStyle}">
        <Setter Property="TextColor" Value="LightBlue"/>
        <Setter Property="HorizontalOptions" Value="End"/>
    </Style>
    <Style TargetType="Label" x:Key="HeaderLabelStyle" BasedOn="{StaticResource CommonLabelStyle}">
        <Setter Property="TextColor" Value="DarkBlue"/>
        <Setter Property="FontSize" Value="Header"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>
</ResourceDictionary>