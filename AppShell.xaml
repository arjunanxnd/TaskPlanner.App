<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskPlanner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskPlanner.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="LoginPage"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <FlyoutItem Title="Home">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:Home}"
            Route="Home"
            />
    </FlyoutItem>

    <FlyoutItem Title="Assignment">
        <ShellContent
            Title="Assignment"
            ContentTemplate="{DataTemplate local:AssignmentPage}"
            Route="AssignmentPage"
            />
    </FlyoutItem>

    <FlyoutItem Title="Exam">
        <ShellContent
            Title="Assignment"
            ContentTemplate="{DataTemplate local:ExamPage}"
            Route="ExamPage"
            />
    </FlyoutItem>

    <FlyoutItem Title="Setting">
        <ShellContent
            Title="Assignment"
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Route="SettingsPage"
            />
    </FlyoutItem>

    <FlyoutItem Title="General">
        <ShellContent
            Title="Assignment"
            ContentTemplate="{DataTemplate local:GeneralPage}"
            Route="GeneralPage"
            />
    </FlyoutItem>

</Shell>
